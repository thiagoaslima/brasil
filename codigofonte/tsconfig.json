{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "lib": [ "es6", "dom", "es2017" ],
    "types": [ "node", "jest" ]
  },
  "exclude": [ "**/dist/*", "**/barra-gov/*", "**/api/*", "**/backend/*", "**/test/*", "**/*.spec.ts", "**/setupJest.ts" ],
  "include": [
    "ClientApp"
  ],
  "atom": { "rewriteTsconfig": false }
}
