{
  "compilerOptions": {
    "allowJs": true,
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipDefaultLibCheck": true,
    "lib": [ "es6", "dom", "es2017" ],
    "types": [ "node", "jest" ]
  },
  "exclude": [ "bin", "node_modules", "**/barra-gov", "**/api", "*/backend", "*/dist", "**/*.spec.ts" ],
  "atom": { "rewriteTsconfig": false }
}
